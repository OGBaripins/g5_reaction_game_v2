<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testScreens.MemoryScoreActivity">

    <ImageView
        android:id="@+id/bgScore"
        android:layout_width="700dp"
        android:layout_height="1200dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="-220dp"
        android:contentDescription="@string/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bggreenyellow" />

    <ImageView
        android:id="@+id/imgTextBox"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="160dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

    <TextView
        android:id="@+id/textLevelReached"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Level"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/textScoreStats"
        app:layout_constraintTop_toTopOf="@+id/imgTextBox" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:text="Score"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/textScoreStats"
        app:layout_constraintTop_toTopOf="@+id/imgTextBox" />

    <TextView
        android:id="@+id/textScoreBest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="BestScore"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/textScoreStats"
        app:layout_constraintTop_toTopOf="@+id/imgTextBox" />

    <TextView
        android:id="@+id/textScoreAVG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:text="AvgScore"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/textScoreStats"
        app:layout_constraintTop_toTopOf="@+id/imgTextBox" />

    <TextView
        android:id="@+id/textScoreStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Level:\n\nScore:\n\nBest score:\n\nAverage score:"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/imgTextBox"
        app:layout_constraintTop_toTopOf="@+id/imgTextBox" />

    <Button
        android:id="@+id/button_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="380dp"
        android:backgroundTint="@color/button_grey"
        android:onClick="goMTest1"
        android:text="TRY AGAIN"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_try_again2"
        android:layout_width="148dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/button_grey"
        android:onClick="goToAudioRecord"
        android:text="RECORD AUDIO HOW HAPPY YOU ARE"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_try_again" />

    <Button
        android:id="@+id/button_try_again3"
        android:layout_width="148dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/button_grey"
        android:onClick="goToVideoRecord"
        android:text="RECORD VIDEO HOW HAPPY YOU ARE"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_try_again" />

    <ImageView
        android:id="@+id/button_back_score"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/desc"
        android:focusable="true"
        android:onClick="goToMemorySelect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/buttonbackblack"
        tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>