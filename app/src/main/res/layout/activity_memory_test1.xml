<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testScreens.MemoryTest1Activity">

    <ImageView
        android:id="@+id/memorySq1"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/desc"
        android:onClick="clickSquare1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bgpink"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageView
        android:id="@+id/memorySq2"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:contentDescription="@string/desc"
        android:onClick="clickSquare2"
        app:layout_constraintStart_toEndOf="@+id/memorySq1"
        app:layout_constraintTop_toTopOf="@+id/memorySq1"
        app:srcCompat="@drawable/bgpink" />

    <ImageView
        android:id="@+id/memorySq3"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/desc"
        android:onClick="clickSquare3"
        app:layout_constraintStart_toStartOf="@+id/memorySq1"
        app:layout_constraintTop_toBottomOf="@+id/memorySq1"
        app:srcCompat="@drawable/bgpink"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/memorySq4"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:contentDescription="@string/desc"
        android:onClick="clickSquare4"
        app:layout_constraintStart_toEndOf="@+id/memorySq3"
        app:layout_constraintTop_toTopOf="@+id/memorySq3"
        app:srcCompat="@drawable/bgpink"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/memorySqIndicator"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-400dp"
        android:contentDescription="@string/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bgblue"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/bgMT1desc"
        android:layout_width="700dp"
        android:layout_height="1200dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="-220dp"
        android:contentDescription="@string/desc"
        android:onClick="startMTest1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bgbluepink"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageView
        android:id="@+id/descMemoryT1"
        android:layout_width="243dp"
        android:layout_height="246dp"
        android:layout_marginStart="203dp"
        android:layout_marginTop="291dp"
        android:contentDescription="@string/desc"
        app:layout_constraintStart_toStartOf="@+id/bgMT1desc"
        app:layout_constraintTop_toTopOf="@+id/bgMT1desc"
        app:srcCompat="@drawable/descmemoryt1" />

</androidx.constraintlayout.widget.ConstraintLayout>